extends layout

block content

	.jumbotron
		form.form-horizontal.text-center#loginForm(action="", method="post", role="form")
			.form-group
				label.col-form-label(for="userName") Email
				.col-sm-8.offset-sm-2
					input.form-control#email(type="email" placeholder="example@email.com" name="email")
			.form-group
				label.col-form-label(for="password") Password
				.col-sm-8.offset-sm-2
					input.form-control(type="password", placeholder="Secret Password" name="password")#password
			button.btn.btn-primary(type="submit")#login Login
